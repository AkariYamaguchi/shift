<h1>シフト提出</h1>

<% @shifts.each do |shift|%>
        <!--日付-->
        <%= shift.business_day%>
        <!--ラジオボタン-->
        <%= form_for(@shift_user) do |f| %>

        <label><%=f.radio_button :work_type, :am, class: :rd %>午前</label>
        <label><%=f.radio_button :work_type, :pm, class: :rd %>午後</label>
        <label><%=f.radio_button :work_type, :all_day, class: :rd %>1日</label>

        <%= f.submit '提出する' ,class:'submit'%>
        <% end%>
    <% end %>




<%= link_to 'Back', shift_users_path %>
