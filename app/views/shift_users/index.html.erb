<p id="notice"><%= notice %></p>

<h1>シフトカレンダー</h1>

<table>
  <thead>
    <tr>

      <th>Shift</th>
      <th>Work type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shift_users.each do |shift_user| %>

      <tr>

        <td><%= shift_user.shift.business_day.strftime("%m/%d") %></td>
        <td><%= shift_user.display_work_type %></td>
        <td><%= link_to 'Show', shift_user %></td>
        <td><%= link_to 'Edit', edit_shift_user_path(shift_user) %></td>
        <td><%= link_to 'Destroy', shift_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

    <% end %>
  </tbody>
</table>

<br>

