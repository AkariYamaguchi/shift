      <div class="container">
        <!--title-->
        <div class='row center'>
          <div class='col s12 '>
            <% if @user.image.attached? %>
              <%= image_tag @user.image, class:'img' %>
            <% else %>
              <% image_tag 'def.png', class:'img'%>
            <% end %>
          </div>
        </div>
        <!--card-->
        <div class="row center">
            <div class="col s12 l6 offset-l3">
              <div class="card">
              <div class="card-content">
              <div class='row'>
                <table class='table'>
                    <tr>
                        <th>名前</th>
                        <td><%=@user.name%></td>
                    </tr>
                    <tr>
                        <th>メールアドレス</th>
                        <td><%= @user.email %></td>
                    </tr>

                    <tr>
                        <th>コメント</th>
                        <td><%= @user.profile %></td>
                    </tr>
                </table>
              </div>
                </div>
                <div class="card-action">
                  <a href="/users/edit">編集</a>
                </div>
              </div>
            </div>
          </div>
      </div>
